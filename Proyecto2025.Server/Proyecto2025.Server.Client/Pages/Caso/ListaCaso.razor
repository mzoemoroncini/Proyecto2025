@page "/casos"


<h3>Lista de Casos</h3>

<table>
    <tr>
        <th>Casos</th>
    </tr>
    @if (casos == null)
    {
        <p>
            <p>Buscando...</p>
        </p>
    }
    else if (casos.Count == 0)
    {
                <p>No hay casos disponibles.</p>
    }
    else
    {
        @foreach (var caso in casos)
        {
            <tr>
                <td>@caso.DatosCaso</td>
            </tr>
        }
    }

</table>

